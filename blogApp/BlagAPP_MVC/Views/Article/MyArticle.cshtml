@model List<BlogAPP_BLL.Models.ArticleReturnInAPI>
@{
	ViewData["Title"] = "My Article";
}

<link rel="stylesheet" href="~/css/article-view.css" />

<div class="article-view">

    @if (TempData["ListArticleIsNull"] is string ListArticleIsNull)
    {
        <div class="alert alert-success" role="alert">@ListArticleIsNull</div>
    }
    else
    {
        @for (var index = 0; index < Model.Count; index++)
        {
            var article = Model[index];
            <div class="article-item">
                <div class="article-header">
                    <h2 class="article-title">@(string.IsNullOrWhiteSpace(article.Title) ? "Без названия" : article.Title)</h2>
                    <div class="article-meta">
                        @if (article.PublishedAt.HasValue)
                        {
                            <span class="date">@article.PublishedAt.Value.ToString("dd MMMM yyyy HH:mm")</span>
                        }

                        @if (article.Tags?.Count > 0)
                        {
                            <div class="tags">
                                @foreach (var tag in article.Tags)
                                {
                                    <span class="tag">#@tag</span>
                                }
                            </div>
                        }

                        @if (article.ReadTime.HasValue)
                        {
                            <span class="read-time">Время чтения: @article.ReadTime мин.</span>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(article.Description))
                {
                    <div class="article-description">@article.Description</div>
                }

                <div class="article-content">
                    <p>@(string.IsNullOrWhiteSpace(article.Text) ? "Содержание статьи отсутствует" : article.Text)</p>
                </div>

                @if (article.comments?.Count > 0)
                {
                    <details class="divComments">
                        <summary class="countComments">Количество комментариев: @article.comments.Count</summary>
                        @for (var commentIndex = 0; commentIndex < article.comments.Count; commentIndex++)
                        {
                            var comment = article.comments[commentIndex];
                            <div class="Comments">
                                <p>Комментарий : @(commentIndex + 1)</p>
                                <h5 class="nameAuthorConnent">@comment.UserName</h5>
                                <p class="contentComments">@comment.Content</p>
                                <p class="timeComments">Опубликован в @comment.CreatedAt</p>
                            </div>
                        }
                    </details>
                }


                <form asp-action="UpdateArticle" asp-controller="Article" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ArticleId" value="@article.Id" />
                    <button type="submit">Редактировать статью</button>
                </form>
            </div>
        }
    }
</div>
